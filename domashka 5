
            Console.Title = "Бабушек";
            int Time = 10;
            Console.WriteLine("Сколько людей в очереди");
            int queue = int.Parse(Console.ReadLine());
            float timeinQueue = (float)queue * Time / 60;
            TimeSpan waitingTime = TimeSpan.FromHours(timeinQueue);
            Console.WriteLine("Вы должны отстоять в очереди {0:hh} часа {0:mm} минут", waitingTime);
